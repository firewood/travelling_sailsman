<script type="text/javascript" src="http://www.openlayers.org/api/OpenLayers.js"></script>

<section class="container">
  <div class="row">

    <div class="col-sm-12 col-md-9">
      <div id="canvas" style="width:1000px; height:1000px"></div>
    </div>

    <div id="panel" class="col-sm-12 col-md-3 hide">

      <h2 id="pref"></h2>
      <h3 id="city"></h3>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">伝統工芸品</h3>
        </div>
        <div class="panel-body">
          <table>
            <tbody data-bind="foreach: crafts">
              <tr>
                <td data-bind="text: $data, click: $parent.onCraftClick"></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</section>

<br>

<section class="container">
  <div class="row">
    <div class="col-md-11">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">楽天市場</h3>
        </div>
        <div class="panel-body">
          <div data-bind="foreach: ichibas">
            <div class="col-md-2">
              <a data-bind="attr: {href: itemUrl}" target="_blank">
                <img style="max-width:150px; max-height:150px;" data-bind="attr:{src: mediumImageUrls[0]}" />
                <div data-bind="text: itemName"></div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="container">
  <div class="row">
    <div class="col-md-11">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">楽天トラベル</h3>
        </div>
        <div class="panel-body">
          <div data-bind="foreach: travels">
            <div class="col-md-2">
              <a data-bind="attr: {href: $data[0].hotelBasicInfo.hotelInformationUrl}" target="_blank">
                <img style="max-width:150px; max-height:150px;" data-bind="attr:{src: $data[0].hotelBasicInfo.hotelImageUrl}" />
                <div data-bind="text: $data[0].hotelBasicInfo.hotelName"></div>
                <div data-bind="text: $data[0].rating"></div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
